{
	"manifest_version": 2,
	"name": "Movie Description Plugin for The Pirate Bay",
	"version": "0.2.9",
	"description": "Movie Description Plugin for The Pirate Bay",
	"web_accessible_resources": ["ajax_loading_small.gif", "options.html"],
	
	"background": {
    	"scripts":  ["js/options.js", "background.js" ]
	},
  
	"options_page": "options.html",
  
	"permissions": [
		"storage",
	    "webRequest",
	    "webRequestBlocking",

		"http://thepiratebay.gy/*",
		"http://thepiratebay.pe/*",
	    "http://thepiratebay.se/*",
		"http://thepiratebay.sx/*",
		"http://www.stackoverflow.com/search*",
	    "http://*/"
	],
	
	"content_scripts": [ {
		"all_frames": true,
		"js": [
			"lib/jquery.min-1.7.2.js", 
			"lib/jquery.ajaxq-0.0.1.js", 
			"js/options.js", 
			"js/blacklist.js", 
			"js/cache.js", 
			"js/misc.js", 
			"js/filmweb.js", 
			"js/imdb.js", 
			"js/pirateBay.js",
			"js/kickass.js",
			"js/loader.js",
			"js/main.js" ],
			
		"matches": [
			"https://kickass.so/*",
			"http://thepiratebay.org/",
			"http://thepiratebay.pe/*",
			"http://thepiratebay.gy/*",
			"http://thepiratebay.se/*",
			"http://thepiratebay.sx/*",
			"http://www.filmweb.pl/*",
			"http://www.imdb.com/*" ]
	}]
}